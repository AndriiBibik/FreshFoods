<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="listBarColor">#00ffffff</item>
        <item name="productShelfFragmentBottomBackground">@color/color_host_fragment_background_day</item>
        <item name="toolbarColor">@color/colorPrimary</item>
        <item name="gridItemBackground">@color/white</item>
        <item name="disabledTextColorInOptions">@color/disabled_text_color</item>
        <item name="appBackground">@color/colorAppBackground</item>
        <item name="listItemSecondaryText">@color/listItemSecondaryText</item>
    </style>

    <!-- Dark application theme. -->
    <style name="DarkAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="android:textColor">@color/colorPrimaryTextDarkTheme</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="listBarColor">#D8121212</item>
        <item name="productShelfFragmentBottomBackground">@color/color_host_fragment_background_night</item>
        <item name="toolbarColor">#17FFFFFF</item>
        <item name="gridItemBackground">#232323</item>
        <item name="disabledTextColorInOptions">@color/disabledTextColorDarkTheme</item>
        <item name="appBackground">@color/colorAppBackgroundDarkTheme</item>
        <item name="listItemSecondaryText">@color/listItemSecondaryTextDarkTheme</item>
    </style>

    <!--Material buttons-->
    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:minWidth">28dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="checkBoxStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorSecondaryTextDarkTheme</item>
    </style>

</resources>
