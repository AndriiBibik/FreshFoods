<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/suggested_product_image"
        android:layout_width="@dimen/product_suggested_list_image_width"
        android:layout_height="@dimen/product_suggested_list_image_height"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/product_suggested_list_image_left_margin"
        android:layout_marginTop="@dimen/product_suggested_list_image_top_margin"
        android:layout_marginRight="@dimen/product_suggested_list_image_right_margin"
        android:layout_marginBottom="@dimen/product_suggested_list_image_bottom_margin"
        tools:src="@drawable/avocado" />
    <TextView
        android:id="@+id/suggested_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Fit and Easy"/>

</LinearLayout>